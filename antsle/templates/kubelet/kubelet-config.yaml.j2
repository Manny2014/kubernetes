kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "{{ kubernetes_conf_dir }}/ca.pem"
authorization:
  mode: Webhook
clusterDomain: "cluster.local"
clusterDNS:
  - "10.32.0.10"
# resolvConf: /run/systemd/resolve/resolv.conf
runtimeRequestTimeout: "15m"
tlsCertFile: "{{ kubelet_dir }}/{{ inventory_hostname }}.pem"
tlsPrivateKeyFile: "{{ kubelet_dir }}/{{ inventory_hostname }}-key.pem"