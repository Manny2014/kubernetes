[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-scheduler \
  --config={{ kubernetes_conf_dir }}/kube-scheduler.yaml \
  --v={{ debug_level }}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target